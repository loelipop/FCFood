<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopCollection">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="我的收藏"
        android:textColor="#FF000000"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="514dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_search">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/StoreList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/container_tab_bar_background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/container_tab_bar_background" />

        <ImageButton
            android:id="@+id/container_tab_bar_tab_selected"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="top|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-20dp"
            android:background="@null"
            android:contentDescription="@string/tab_selected_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/container_tab_bar_tab_selected"
            android:tint="#9586A8" />

        <ImageButton
            android:id="@+id/container_tab_bar_icon_heart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="@string/icon_heart_desc"
            android:scaleType="centerInside"
            android:src="@drawable/container_tab_bar_icon_heart"
            android:tint="@color/design_default_color_primary" />

        <ImageButton
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:contentDescription="@string/tab2_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/container_tab_bar_tab2" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>