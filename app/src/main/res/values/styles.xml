<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Ensure the theme uses a light background -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name ="circular">
        <item name="cornerSize">10%</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationActiveTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationInactiveTextAppearance</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>


    <style name="BottomNavigationActiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item> <!-- Set text size to 0 to hide text -->
    </style>

    <style name="BottomNavigationInactiveTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">0sp</item> <!-- Set text size to 0 to hide text -->
    </style>
</resources>